
<h1><%= t('index.Users Index Page') %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= "名前" %></th>
      <th><%= "メールアドレス" %></th>
      <th><%= "管理者権限" %></th>
      <th><%= "タスク数" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.eager_load(:tasks).each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin ? 'あり' : 'なし' %></td>
        <td><%= user.tasks.size %></td>

        <td>
          <div class="d-flex justify-content-center column-gap-3">
            <%= link_to t('common.Show'), admin_user_path(user), class: "show-user btn btn-primary" %>
            <%= link_to t('common.Edit'), edit_admin_user_path(user), class: "edit-user btn btn-primary" %>
            <%= link_to t('common.Destroy'), admin_user_path(user), method: :delete, data: { confirm: t('common.Are you sure?') }, class: "destroy-user btn btn-danger" %>
          </div>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


