<h1><%= t('index.Edit Label Page') %></h1>
<% if @labels.errors.any? %>
  <div id="error_explanation"  class="alert alert-danger" role="alert">
    <h3><%= pluralize(@labels.errors.count, "件のエラーが発生しました") %></h3>
    <ul>
    <% @labels.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @labels, local: true) do |f| %>
  <div class="row gap-3">
    <div class="form-group col-12"> 
      <%= f.label :"名前" %>
      <%= f.text_field :name, class: "form-control" %>
      </div>

    <div class="form-group col-12 d-flex justify-content-end mt-3">      
      <%= f.submit "更新する", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= link_to "戻る", labels_path, id: "back", class: "d-flex justify-content-end mt-3" %>
