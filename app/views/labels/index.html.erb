
<h1><%= t('index.Labels Index Page') %></h1>

<table>
  <thead>
    <tr>
      <th><%= "名前" %></th>
      <th><%= "タスク数" %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.eager_load(:tasks).each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= user.labels.count %></td>

        <td><%= link_to t('common.Edit'), edit_label_path(label), class: "edit-user" %></td>
        <td><%= link_to t('common.Destroy'), label_path(label), method: :delete, data: { confirm: t('common.Are you sure?') }, class: "destroy-user" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


