<h1><%= t('index.New Label Page') %></h1>
<% if @labels.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@labels.errors.count, "件のエラーが発生しました") %></h2>
    <ul>
    <% @labels.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @labels, local: true) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.submit "登録する" %>
<% end %>