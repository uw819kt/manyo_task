<%= form_with(scope: :search, url: tasks_path, method: :get, local: true) do |form| %>
  <div class="row">
    <div class="form-group col-3">
      <%= form.label(:status, "ステータス") %>
      <%= form.select :status, Task.statuses.keys, { include_blank: true }, class: "form-control" %>
    </div>

    <div class="form-group col-6">
      <%= form.label(:title, "タイトル") %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group col-3">
      <%= form.label(:label, "ラベル") %>
      <%= form.select :labels_id, options_from_collection_for_select(Label.all, :id, :name), { include_blank: true }, id: "search_label", class: "form-control" %>
    </div>

    <div class="form-group col-12 d-flex justify-content-end">
      <%= form.submit "検索", id: "search_task", class: "btn btn-primary mt-3", style: "width: 100px" %>
    </div>
  </div>

<% end %>