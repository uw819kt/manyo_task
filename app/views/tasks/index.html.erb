
<h1><%= t('index.Tasks Index Page') %></h1>

<%= render 'search_form' %>

<table class="table">
  <thead>
    <tr>
      <th scope="col"><%= t('index.Title') %></th>
      <th scope="col"><%= t('index.Content') %></th>
      <th scope="col"><%= t('index.Created_at') %></th>
      <th scope="col"><%= link_to "終了期限", sort_deadline_on: true %></th>
      <th scope="col"><%= link_to "優先度", sort_priority: true %></th>
      <th scope="col"><%= t('index.Status') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task. created_at.to_s(:datetime_jp) %></td>
        <td><%= task.deadline_on %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>

        <td>
          <div class="d-flex justify-content-center column-gap-3">
            <%= link_to t('common.Show'), task, class: "show-task btn btn-primary", type: "button" %>
            <%= link_to t('common.Edit'), edit_task_path(task), class: "edit-task btn btn-primary", type: "button" %>
            <%= link_to t('common.Destroy'), task, method: :delete, data: { confirm: t('common.Are you sure?') }, class: "destroy-task btn btn-danger", type: "button" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @tasks %>
<br>


