<p id="notice"><%= notice %></p>

<h1>タスク一覧ページ</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>作成日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at %></td>
        <td><%= link_to '詳細', task, class: "show-task" %></td>
        <td><%= link_to '編集', edit_task_path(task), class: "edit-task" %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: '本当に削除してもよろしいですか?' }, class: "destroy-task" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
